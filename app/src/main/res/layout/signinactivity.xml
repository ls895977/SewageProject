<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_signinbg"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/signInTitle"
        android:text="欢迎登录"
        android:layout_marginLeft="@dimen/dip_25"
        android:layout_marginTop="@dimen/dip_60"
        android:textStyle="bold"
        android:textSize="@dimen/fond_30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/signInContext"
        android:layout_marginTop="@dimen/dip_5"
        app:layout_constraintStart_toStartOf="@+id/signInTitle"
        app:layout_constraintTop_toBottomOf="@+id/signInTitle"
        android:layout_width="wrap_content"
        android:textSize="@dimen/fond_12sp"
        android:textColor="@color/white"
        android:text="中能建南方建设（封开）环保投资有限公司智慧水务平台"
        android:layout_height="wrap_content"/>
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_marginTop="@dimen/dip_50"
         android:background="@drawable/bg_ffffff_top20"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/signInContext"
         android:layout_height="0dip">
        <View
            android:layout_width="@dimen/dp_40"
            android:layout_marginTop="@dimen/dip_6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_cccccc_4"
            android:layout_height="@dimen/dip_4"/>
         <TextView
             android:id="@+id/tvAccount"
             android:layout_width="wrap_content"
             android:text="账号"
             android:textColor="@color/text_color_666666"
             android:textSize="@dimen/fond_15sp"
             android:layout_marginTop="@dimen/dip_65"
             android:layout_marginLeft="@dimen/dip_25"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_height="wrap_content"/>
         <EditText
             android:id="@+id/etAccount"
             android:layout_marginHorizontal="@dimen/dip_20"
             android:layout_marginTop="@dimen/dip_10"
             app:layout_constraintTop_toBottomOf="@+id/tvAccount"
             android:layout_width="match_parent"
             android:hint="请输入账号"
             android:paddingLeft="@dimen/dip_15"
             android:textColor="@color/text_color_b3b3b3"
             android:textSize="@dimen/fond_15sp"
             android:background="@drawable/bg_e4e4e4_5"
             android:layout_height="@dimen/dp_40"/>

         <TextView
             android:id="@+id/tvPassword"
             android:layout_width="wrap_content"
             android:text="账号"
             android:textColor="@color/text_color_666666"
             android:textSize="@dimen/fond_15sp"
             android:layout_marginTop="@dimen/dip_15"
             android:layout_marginLeft="@dimen/dip_25"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/etAccount"
             android:layout_height="wrap_content"/>
         <EditText
             android:id="@+id/etPassword"
             android:layout_marginHorizontal="@dimen/dip_20"
             android:layout_marginTop="@dimen/dip_10"
             app:layout_constraintTop_toBottomOf="@+id/tvPassword"
             android:layout_width="match_parent"
             android:hint="请输入密码"
             android:inputType="textPassword"
             android:paddingLeft="@dimen/dip_15"
             android:textColor="@color/text_color_b3b3b3"
             android:textSize="@dimen/fond_15sp"
             android:background="@drawable/bg_e4e4e4_5"
             android:layout_height="@dimen/dp_40"/>

         <ImageView
             android:id="@+id/ivEyE"
             android:layout_width="24dp"
             android:layout_height="19dp"
             android:layout_marginRight="@dimen/dip_5"
             android:src="@drawable/check_selected"
             app:layout_constraintBottom_toBottomOf="@+id/etPassword"
             app:layout_constraintEnd_toEndOf="@+id/etPassword"
             app:layout_constraintTop_toTopOf="@+id/etPassword" />
        <TextView
            android:id="@+id/tvRadio"
            android:drawablePadding="@dimen/dip_5"
            android:layout_marginTop="@dimen/dip_10"
            android:drawableLeft="@drawable/radio_selected"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            app:layout_constraintStart_toStartOf="@+id/etPassword"
            android:layout_width="wrap_content"
            android:text="记住密码"
            android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/tvCommit"
             android:layout_marginTop="@dimen/dip_50"
             app:layout_constraintStart_toStartOf="parent"
             android:background="@drawable/bg_1d7eff_5"
             android:text="登录"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="@dimen/fond_15sp"
             app:layout_constraintTop_toBottomOf="@+id/tvRadio"
             android:layout_marginHorizontal="@dimen/dip_20"
             android:layout_width="match_parent"
             android:layout_height="@dimen/dp_40"/>
     </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>