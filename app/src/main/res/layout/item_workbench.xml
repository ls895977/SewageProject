<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/dip_15"
    android:paddingTop="@dimen/dip_15"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:text="巡检报障"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/fond_15sp"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workChildRecyclerView"
        android:layout_marginTop="@dimen/dip_8"
        app:spanCount="5"
        android:paddingBottom="@dimen/dip_25"
        tools:itemCount="10"
        tools:listitem="@layout/item_workbenchchild"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_width="match_parent"
        android:background="@drawable/bg_ffffff_5"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>