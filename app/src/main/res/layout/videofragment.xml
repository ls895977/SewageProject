<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/superTitle"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_1d7eff"
        android:layout_height="@dimen/dip_65">
        <EditText
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dip_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/dip_30"
            android:background="@drawable/bg_ffffff_5"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/fond_12sp"
            android:textColorHint="#cccccc"
            android:hint="搜索视频名称"
            android:layout_marginBottom="@dimen/dip_8"
            android:layout_height="@dimen/dip_30"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/detail_player"
        app:layout_constraintTop_toBottomOf="@+id/superTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_200" />
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_player"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sewageLeftRecyclerView"
            android:background="@color/color_fafafa"
            android:layout_width="0dip"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <androidx.recyclerview.widget.RecyclerView
          android:paddingHorizontal="@dimen/dip_5"
            android:background="@color/white"
            android:id="@+id/sewageRightRecyclerView"
            android:layout_width="0dip"
            app:spanCount="2"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>