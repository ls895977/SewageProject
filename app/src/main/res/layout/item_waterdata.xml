<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tvNumType"
        android:layout_marginTop="@dimen/dip_15"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_color_333"
        tools:text="2000"
        android:textSize="@dimen/fond_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvNumTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNumType"
        android:layout_width="wrap_content"
        tools:text="在线站点"
        android:textSize="@dimen/fond_12sp"
        android:textColor="@color/text_color_999999"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>