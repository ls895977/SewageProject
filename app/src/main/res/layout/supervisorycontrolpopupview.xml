<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    >

<androidx.core.widget.NestedScrollView
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/clBut"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_0">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:text="筛选"
        android:layout_marginVertical="@dimen/dip_25"
        android:textSize="@dimen/fond_16sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="站点类型"
        android:layout_marginStart="@dimen/dp_10"
        android:textSize="@dimen/fond_16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/myZDflowlayout"
        app:max_select="1"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="状态"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dip_25"
        android:textSize="@dimen/fond_16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/myZXflowlayout"
        app:max_select="1"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="状态"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dip_25"
        android:textSize="@dimen/fond_16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/myBZflowlayout"
        app:max_select="1"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50">
        <TextView
            android:id="@+id/tvChongZhi"
            android:layout_width="@dimen/dp_0"
            android:text="重置"
            android:textColor="#1D7EFF"
            android:gravity="center"
            android:textSize="@dimen/fond_16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvCenTer"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvCenTer"
            android:layout_width="@dimen/dp_0"
            android:background="#1D7EFF"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tvChongZhi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>