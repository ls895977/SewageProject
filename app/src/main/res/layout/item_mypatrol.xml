<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_71"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<View
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@color/text_color_f7f7f7"
    android:layout_height="@dimen/dip_1"/>
    <com.sewageproject.view.CircularProgressView
        android:id="@+id/guZhangBar"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:backColor="@color/text_color_E4E8ED"
        app:backWidth="@dimen/dip_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progColor="@drawable/fond_progress_selecte"
        app:progWidth="@dimen/dip_3"
        app:progress="30" />
        <TextView
            android:id="@+id/tvProgress"
            app:layout_constraintTop_toTopOf="@+id/guZhangBar"
            app:layout_constraintEnd_toEndOf="@+id/guZhangBar"
            app:layout_constraintStart_toStartOf="@+id/guZhangBar"
            app:layout_constraintBottom_toBottomOf="@+id/guZhangBar"
            android:layout_width="wrap_content"
            android:text="60%"
            android:textColor="@drawable/fond_progress_selecte"
            android:textSize="@dimen/fond_12sp"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvZDName"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_15"
        android:text="站点或线路名称"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/fond_14sp"
        app:layout_constraintLeft_toRightOf="@+id/guZhangBar"
        app:layout_constraintTop_toTopOf="@+id/guZhangBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvZhouQi"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dip_6"
        android:paddingStart="@dimen/dp_15"
        android:text="周期：每天"
        android:textColor="@color/text_color_999999"
        android:textSize="@dimen/fond_12sp"
        app:layout_constraintLeft_toRightOf="@+id/guZhangBar"
        app:layout_constraintTop_toBottomOf="@+id/tvZDName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvXunJianName"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dip_6"
        android:text="巡检员姓名"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/guZhangBar"
        app:layout_constraintTop_toTopOf="@+id/guZhangBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_color_999999"
        android:textSize="@dimen/fond_12sp"
        android:drawablePadding="@dimen/dip_3"
        android:drawableEnd="@mipmap/ic_right_arr_ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>