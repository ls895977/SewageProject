<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemTopCLStyle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivItemTopStyle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@mipmap/ic_zt01_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ivItemTopStyleText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_2"
            android:text="状态名称"
            android:textColor="@drawable/fond_trouble_selecte"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toEndOf="@+id/ivItemTopStyle1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ivItemTopStyleTextContext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_2"
            android:text="用户名称  年月日时分秒"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toEndOf="@+id/ivItemTopStyleText1"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemCenterStyle2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivItemTopStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@drawable/troublecenter_selected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ivItemTopStyleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_2"
            android:text="状态名称"
            android:textColor="@drawable/fond_trouble_selecte"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/ivItemTopStyle2"
            app:layout_constraintStart_toEndOf="@+id/ivItemTopStyle2"
            app:layout_constraintTop_toTopOf="@+id/ivItemTopStyle2" />

        <TextView
            android:id="@+id/ivItemTopStyleTextContext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_2"
            android:textColor="@drawable/fond_trouble_selecte"
            android:text="用户名称  年月日时分秒"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/ivItemTopStyle2"
            app:layout_constraintStart_toEndOf="@+id/ivItemTopStyleText2"
            app:layout_constraintTop_toTopOf="@+id/ivItemTopStyle2" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemButStyle3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivItemTopStyle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
